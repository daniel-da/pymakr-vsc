{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"checkJs": true,
		"allowJs": true,
		"skipLibCheck": true,
		"lib": [
			"ES2020"
		],
		"resolveJsonModule": true,
		"rootDir": "."
	},
	"include": [
		"src/**/*.js",
		"src/**/*.ts",
		"test/**/*.js",
		"test/**/*.ts",
		"types/typedef.js",
		"types/store.js",
		"typedoc.ts"
	],
	"exclude": [
		"node_modules/**"
	]
}
